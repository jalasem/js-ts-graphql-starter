{
  "name": "ischool-server",
  "version": "1.0.0",
  "description": "API server for iSchool",
  "main": "dist/app.js",
  "scripts": {
    "start": "npm run build && node dist/app.js",
    "start-dev": "nodemon",
    "copy-gql": "cpx src/**/*.gql dist",
    "build": "rm -rf dist && tsc && npm run copy-gql",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test-watch": "cross-env NODE_ENV=test jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/ischool-app/ischool-server.git"
  },
  "keywords": [
    "school",
    "api",
    "graphql"
  ],
  "author": "iSchool",
  "license": "ISC",
  "homepage": "https://bitbucket.org/ischool-app/ischool-server#readme",
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^25.1.2",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "nodemon": "^2.0.2",
    "ts-node": "^8.6.2",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.5",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.0",
    "cuid": "^2.1.8",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.5.8",
    "graphql-tools": "^4.0.6",
    "mongoose": "^5.8.11",
    "rimraf": "^3.0.2"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/db-setup.ts"
    ],
    "testPathIgnorePatterns": [
      "dist/"
    ],
    "restoreMocks": true
  }
}
